        xmlns:local="clr-namespace:DiplomsView"
        mc:Ignorable="d"
        Title="AddCatElement" Height="300" Width="400" ResizeMode="NoResize">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="cat_name_help" Margin="62,13,62,10" Grid.ColumnSpan="2" FontSize="16" Text="Добавление нового руководителя"/>
