        <TextBox x:Name="new_id" Grid.Row="1" Margin="30,28,30,10" Grid.ColumnSpan="2"/>
        <!---->
        <!--<TextBlock  Grid.Row="2" Text="Эл.почта:" Margin="30,6,66,113" FontSize="16"/>-->
        <!--<TextBox  Grid.Row="2" Margin="30,42,30,67" Grid.ColumnSpan="2"/>-->
        <!---->
        <Button x:Name="btn_AddElement" Content="Готово" Grid.Row="2" Margin="98,93,98,18" Grid.ColumnSpan="2" Click="btn_AddElement_Click"/>
    </Grid>
</Window>
