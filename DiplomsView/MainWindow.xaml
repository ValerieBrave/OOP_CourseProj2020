<Window x:Class="DiplomsView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomsView"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid ShowGridLines="True" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition  Height="20"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="error_Info" HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="792" Grid.ColumnSpan="2" Height="20" FontSize="14"/>
        <Expander x:Name="test_diplom"  HorizontalAlignment="Stretch" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1" FontFamily="Yu Gothic UI" FontSize="14" FontWeight="Bold"  Height="120" Style="{DynamicResource diplomExpander}" >
            
        </Expander>
    </Grid>
</Window>
